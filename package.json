{
	"name": "@efobi/paystack",
	"version": "0.11.2",
	"description": "A TypeScript SDK for Paystack",
	"keywords": [
		"paystack",
		"sdk",
		"typescript",
		"api",
		"payment"
	],
	"homepage": "https://github.com/efobi-dev/paystack",
	"bugs": {
		"url": "https://github.com/efobi-dev/paystack/issues"
	},
	"author": {
		"name": "Owen Efobi",
		"email": "owen@efobi.dev",
		"url": "https://github.com/efobi-dev"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/efobi-dev/paystack.git"
	},
	"type": "module",
	"main": "dist/index.mjs",
	"types": "dist/index.d.mts",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs"
		},
		"./transaction": {
			"types": "./dist/transaction.d.mts",
			"import": "./dist/transaction.mjs"
		},
		"./split": {
			"types": "./dist/split.d.mts",
			"import": "./dist/split.mjs"
		},
		"./transfer": {
			"types": "./dist/transfer.d.mts",
			"import": "./dist/transfer.mjs"
		},
		"./recipient": {
			"types": "./dist/recipient.d.mts",
			"import": "./dist/recipient.mjs"
		},
		"./verification": {
			"types": "./dist/verification.d.mts",
			"import": "./dist/verification.mjs"
		},
		"./miscellaneous": {
			"types": "./dist/miscellaneous.d.mts",
			"import": "./dist/miscellaneous.mjs"
		},
		"./virtual": {
			"types": "./dist/virtual.d.mts",
			"import": "./dist/virtual.mjs"
		},
		"./webhook": {
			"types": "./dist/webhook.d.mts",
			"import": "./dist/webhook.mjs"
		}
	},
	"scripts": {
		"build": "tsdown",
		"test": "bun test",
		"format": "biome check --write",
		"ci": "bun run build && bun run test && bun run format",
		"local-release": "changeset version && changeset publish",
		"prepublishOnly": "bun run ci"
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@changesets/cli": "^2.29.5",
		"@types/bun": "latest",
		"tsdown": "^0.20.3",
		"typescript": "^5.8.3",
		"zod": "^4.0.10"
	},
	"peerDependencies": {
		"zod": "^4.0.0"
	}
}
