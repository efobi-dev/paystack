{
	"name": "@efobi/paystack",
	"version": "0.11.0",
	"description": "A TypeScript SDK for Paystack",
	"keywords": [
		"paystack",
		"sdk",
		"typescript",
		"api",
		"payment"
	],
	"homepage": "https://github.com/efobi-dev/paystack",
	"bugs": {
		"url": "https://github.com/efobi-dev/paystack/issues"
	},
	"author": {
		"name": "Owen Efobi",
		"email": "owen@efobi.dev",
		"url": "https://github.com/efobi-dev"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/efobi-dev/paystack.git"
	},
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./transaction": {
			"types": "./dist/transaction.d.ts",
			"import": "./dist/transaction.js"
		},
		"./split": {
			"types": "./dist/split.d.ts",
			"import": "./dist/split.js"
		},
		"./transfer": {
			"types": "./dist/transfer.d.ts",
			"import": "./dist/transfer.js"
		},
		"./recipient": {
			"types": "./dist/recipient.d.ts",
			"import": "./dist/recipient.js"
		},
		"./verification": {
			"types": "./dist/verification.d.ts",
			"import": "./dist/verification.js"
		},
		"./miscellaneous": {
			"types": "./dist/miscellaneous.d.ts",
			"import": "./dist/miscellaneous.js"
		},
		"./virtual": {
			"types": "./dist/virtual.d.ts",
			"import": "./dist/virtual.js"
		},
		"./webhook": {
			"types": "./dist/webhook.d.ts",
			"import": "./dist/webhook.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"clean": "rimraf dist",
		"test": "bun test",
		"format": "biome check --write",
		"ci": "bun run build && bun run test && bun run format",
		"local-release": "changeset version && changeset publish",
		"prepublishOnly": "bun run ci"
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@changesets/cli": "^2.29.5",
		"@types/bun": "latest",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.1",
		"typescript": "^5.8.3",
		"zod": "^4.0.10"
	},
	"peerDependencies": {
		"zod": "^4.0.0"
	}
}
